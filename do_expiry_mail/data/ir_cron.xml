<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job to check expiration and send mail -->
        <record id="cron_check_expiration_and_send_mail" model="ir.cron">
            <field name="name">Check Expiration and Send Mail</field>
            <field name="model_id" ref="base_setup.model_res_config_settings"/>
            <field name="state">code</field>
            <field name="code">model.check_expiry_and_send_mail()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
