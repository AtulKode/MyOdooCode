<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data noupdate="0">
        <record id="mail_template_expiry_notification" model="mail.template">
            <field name="name">Database Expiry Notification</field>
            <field name="model_id" ref="base_setup.model_res_config_settings"/>
            <field name="subject">Your Database is About to Expire</field>
            <field name="email_from">abc@gmail.com</field>
            <field name="email_to">abc@gmail.com</field>
            <field name="body_html" type="html">
                <div style="margin: 0px; padding: 0px;">
                    <p>Hello,</p>
                    <p>Your database will expire on
                        <t t-esc="env['ir.config_parameter'].sudo().get_param('database.expiration_date')"/>
                   .</p>
                    <p>Please take necessary actions.</p>
                    <p>Regards,<br/>Your Company</p>
                </div>
            </field>
        </record>
    </data>
</odoo>
