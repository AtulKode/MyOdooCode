<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
   <record id="res_config_settings_inheit_view_expiry_date" model="ir.ui.view">
       <field name="name">res.config.settings.inherit.view.expiry</field>
       <field name="model">res.config.settings</field>
       <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
       <field name="arch" type="xml">
                <xpath expr="//div[@id='companies']" position="after">
                    <h2>Send Expiry Mail</h2>
                    <div class="row mt16 o_settings_container" id="expiry_mail_general_settings">
                        <div class="col-12 col-lg-6 o_setting_box" id="expiry_mail_setting">
                            <div class="o_setting_left_pane">
                                <field name="send_expiry_mail"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="send_expiry_mail" string="Send Expiry Mail"/>
                                <div class="text-muted">
                                        Set Expiry days
                                    </div>
                                <div class="content-group">
                                    <field name="send_expiry_mail" invisible="1"/>
                                    <div class="mt16">
                                        <field name="set_days" attrs="{'invisible': [('send_expiry_mail', '!=', True)]}"/>
                                    </div>
                                </div>
                            </div>
                    
                        </div>
                    </div>
                </xpath>
       </field>
   </record>
</odoo>
