<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="pos_config_customer_note" model="ir.ui.view">
		<field name="name">pos.config.customer.note</field>
		<field name="model">pos.config</field>
		<field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
		<field name="arch" type="xml">
            <xpath expr="//form//div[4]/div[2]" position="after">
                    <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="customer_note_config"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="customer_note_config"/>
                                <div class="text-muted">
                                    Check this field to hide customer note button from pos
                                </div>
                            </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="pos_config_date"/>
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="pos_config_date"/>
                                <div class="text-muted">
                                    Check this field to hide pos date button from pos
                                </div>
                            </div>
                    </div>
            </xpath> 
			
		</field>
		
	</record>
</odoo>

