<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_res_users_form_inherit" model="ir.ui.view">
            <field name="name">res.users.form.inherit.view</field>
            <field name="model">res.users</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='preferences']" position="after">
                    <page string="POS User Matrix" name="pos_user_matrix">
                        <group>
                            <field name="pos_customer_note"/>
                            <field name="pos_refund"/>
                            <field name="pos_info"/>
                            <field name="pos_discount"/>
                            <field name="pos_enter_code"/>
                            <field name="pos_reward"/>
                            <field name="pos_quatation_order"/>
                            <field name="pos_clear_cart"/>
                            <field name="pos_clear_coupon"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
</odoo>
