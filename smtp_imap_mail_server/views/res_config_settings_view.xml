<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_smtp" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.smtp</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='contacts_settings']" position="before">
                <div id="smtp_config" >
                    <h2>SMTP Configuration</h2>
                    <div class='row mt16 o_settings_container' id='smtp_div'>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label string="Select" for="select"/>
                                <field name="select"/>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
