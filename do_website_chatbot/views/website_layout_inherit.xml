<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="header" inherit_id="website.layout" name="Chatbot" customize_show="True">
        <xpath expr="//div[@id='footer']" position="after">
            <t t-set="chatbot_id" t-value="website.get_default_chatbot()" />
            <t t-if="chatbot_id">
                <div id="chatbot">
                    <button id="chatbot_toggle" class="chatbot_icon_btn">
                        <img t-attf-src="/web/image/chatbot.chatbot/#{chatbot_id.id}/icon" class="img-fluid chatbot_icon" />
                    </button>
                    <div class="chatbot_card collapsed d-none">
                        <button class="chatbot_close_icon d-none">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
                                <path d="M0 0h24v24H0V0z" fill="none" />
                                <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12 19 6.41z" />
                            </svg>
                        </button>
                        <div class="main-title" id="my-custom-open">
                            <div>
                                <img t-attf-src="/web/image/chatbot.chatbot/#{chatbot_id.id}/chatbot_image" class="img-fluid" />
                            </div>
                            <span id="greeting-name">
                                <t t-esc="chatbot_id.name" /></span>
                        </div>
                        <div class="chat-area" id="message-box">
                        </div>
                        <div class="line"></div>
                        <div class="input-div">
                            <input class="input-message" name="message" type="text" id="message" placeholder="Type your message ..." />
                            <button class="input-send" id="input_send_request">
                                <svg style="width:24px;height:24px">
                                    <path d="M2,21L23,12L2,3V10L17,12L2,14V21Z" />
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </t>
        </xpath>
    </template>
</odoo>