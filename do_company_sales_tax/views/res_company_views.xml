<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="inherit_res_company_form" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form//sheet//notebook//page[@name='branches']" position="after">
                    <page string="State Tax Limit" name="state_tax_limit">
                        <field name="sale_tax_limit_ids">
                            <tree string="Sale Tax Lines" editable="bottom">
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="threshold"/>
                                <field name="total_sales"/>
                            </tree> 
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>