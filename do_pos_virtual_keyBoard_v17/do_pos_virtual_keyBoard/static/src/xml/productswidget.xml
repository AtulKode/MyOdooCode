<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="do_pos_virtual_keyBoard.OnscreenKeyboardSimple">
        <div class="keyboard_frame">
            <ul class="keyboard full_keyboard">
                <li class="symbol" t-on-click="keyboardClick"><span class="off">&#768;</span><span class="on">&#771;</span></li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">1</span><span class="on">!</span></li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">2</span><span class="on">@</span></li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">3</span><span class="on">#</span></li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">4</span><span class="on">$</span></li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">5</span><span class="on">%</span></li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">6</span><span class="on">&#770;</span></li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">7</span><span class="on">&amp;</span></li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">8</span><span class="on">*</span></li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">9</span><span class="on">(</span></li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">0</span><span class="on">)</span></li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">-</span><span class="on">_</span></li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">=</span><span class="on">+</span></li>
                <li class="delete lastitem" t-on-click="keyboardClick">delete</li>
                <li class="tab firstitem" t-on-click="keyboardClick">tab</li>
                <li class="letter" t-on-click="keyboardClick">q</li>
                <li class="letter" t-on-click="keyboardClick">w</li>
                <li class="letter" t-on-click="keyboardClick">e</li>
                <li class="letter" t-on-click="keyboardClick">r</li>
                <li class="letter" t-on-click="keyboardClick">t</li>
                <li class="letter" t-on-click="keyboardClick">y</li>
                <li class="letter" t-on-click="keyboardClick">u</li>
                <li class="letter" t-on-click="keyboardClick">i</li>
                <li class="letter" t-on-click="keyboardClick">o</li>
                <li class="letter" t-on-click="keyboardClick">p</li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">[</span><span class="on">{</span></li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">]</span><span class="on">}</span></li>
                <li class="symbol lastitem" t-on-click="keyboardClick">
                    <span class="off">|</span>
                    <span class="on">|</span>
                </li>
                <li class="capslock firstitem" t-on-click="keyboardClick">caps lock</li>
                <li class="letter" t-on-click="keyboardClick">a</li>
                <li class="letter" t-on-click="keyboardClick">s</li>
                <li class="letter" t-on-click="keyboardClick">d</li>
                <li class="letter" t-on-click="keyboardClick">f</li>
                <li class="letter" t-on-click="keyboardClick">g</li>
                <li class="letter" t-on-click="keyboardClick">h</li>
                <li class="letter" t-on-click="keyboardClick">j</li>
                <li class="letter" t-on-click="keyboardClick">k</li>
                <li class="letter" t-on-click="keyboardClick">l</li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">;</span><span class="on">:</span></li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">'</span><span class="on">&quot;</span></li>
                <li class="return lastitem" t-on-click="keyboardClick">return</li>
                <li class="left-shift firstitem" t-on-click="keyboardClick">shift</li>
                <li class="letter" t-on-click="keyboardClick">z</li>
                <li class="letter" t-on-click="keyboardClick">x</li>
                <li class="letter" t-on-click="keyboardClick">c</li>
                <li class="letter" t-on-click="keyboardClick">v</li>
                <li class="letter" t-on-click="keyboardClick">b</li>
                <li class="letter" t-on-click="keyboardClick">n</li>
                <li class="letter" t-on-click="keyboardClick">m</li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">,</span><span class="on">&lt;</span></li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">.</span><span class="on">&gt;</span></li>
                <li class="symbol" t-on-click="keyboardClick"><span class="off">/</span><span class="on">?</span></li>
                <li class="right-shift lastitem" t-on-click="keyboardClick">shift</li>
                <li class="space firstitem lastitem" t-on-click="keyboardClick">&amp;nbsp;</li>
            </ul>
            <p class="close_button" t-on-click="keyboardClose">close</p>
        </div>
    </t>
    <t t-name="do_pos_virtual_keyBoard.Chrome" t-inherit="point_of_sale.Chrome" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-content')]" position="inside">
            <OnscreenKeyboardSimple/>
        </xpath>
    </t>


     <t t-name="do_pos_virtual_keyBoard.input" t-inherit="point_of_sale.input" t-inherit-mode="extension" >
 
        <xpath expr="//input" position="attributes">
          <attribute name="t-on-click">_onClickProductSearch</attribute>
        </xpath>
    </t>

     <t t-name="do_pos_virtual_keyBoard.PartnerListScreen" t-inherit="point_of_sale.PartnerListScreen" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('pos-search-bar')]//input" position="attributes">
            <attribute name="t-on-click">_onClickProductSearch</attribute>
        </xpath>
    </t>
</templates>