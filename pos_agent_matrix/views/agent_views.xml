<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="agent_model_form_view" model="ir.ui.view">
		<field name="name">agent model form view</field>
		<field name="model">agent.model</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
				<group>
					<field name="name"/>
					<field name="is_active_agent"/>
				</group>
				</sheet>
			</form>

		</field>
	</record>

		<record id="agent_model_tree_view" model="ir.ui.view">
            <field name="name">agent model form view</field>
            <field name="model">agent.model</field>
            <field name="arch" type="xml">
                <tree string="Agent Tree View">
    				<field name="name"/>
					<field name="is_active_agent"/>
                </tree>
            </field>
        </record>

    <record id="agent_model_action" model="ir.actions.act_window">
        <field name="name">Agent</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">agent.model</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{}</field>
    </record>

    <menuitem id="agent_menu_root" 
    	name="Agent" 
    	action="agent_model_action"
    	parent="point_of_sale.menu_point_config_product"
        sequence="100"
       />

</odoo>