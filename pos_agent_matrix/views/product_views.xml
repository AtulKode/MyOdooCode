<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="product_template_view_agent_pos" model="ir.ui.view">
        <field name="name">product.template.view.form.agent</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='barcode']" position="after">
                <field name="detailed_type" invisible="True"/>
                <field name="is_service_agent" attrs="{'invisible': [('detailed_type', '!=', 'service')]}"/>
            </xpath>
        </field>
    </record>
</odoo>