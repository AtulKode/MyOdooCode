<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <t t-name="do_odoo_debranding.HideUserMenu" t-inherit="web.UserMenu" t-inherit-mode="extension">
        <xpath expr="//t[@t-foreach='getElements()']" position="replace">
            <t t-foreach="getElements()" t-as="element" t-key="element_index">
                <t t-if="!element.hide and element.id != 'account' and element.id != 'documentation' and element.id != 'support' and element.id != 'shortcuts'">
                    
                    <DropdownItem
                        t-if="element.type == 'item' || element.type == 'switch'"
                        href="element.href"
                        dataset="{ menu: element.id }"
                        onSelected="element.callback"
                    >
                        <CheckBox
                            t-if="element.type == 'switch'"
                            value="element.isChecked"
                            className="'form-switch d-flex flex-row-reverse justify-content-between p-0 w-100'"
                            onChange="element.callback"
                        >
                            <t t-out="element.description"/>
                        </CheckBox>
                        <t t-else="" t-out="element.description"/>
                    </DropdownItem>
                    <div t-if="element.type == 'separator'" role="separator" class="dropdown-divider"/>
                </t>
            </t>
        </xpath>

    </t>
</odoo>
