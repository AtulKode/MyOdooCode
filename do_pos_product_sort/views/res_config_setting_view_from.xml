<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="inherit_pos_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.product.filter</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <block id="pos_interface_section" position="inside">
                <setting help="Filter product in pos screen">
                    <field name="pos_show_prod_filter"/>
                    <div class="content-group mt16" invisible="not pos_show_prod_filter">
                        <field name="pos_default_filter"/>
                    </div>
                </setting>
            </block>
        </field>
    </record>
</odoo>
