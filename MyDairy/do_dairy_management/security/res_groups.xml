<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.module.category" id="module_dairy_management">
         <field name="name">Dairy Management</field>
         <field name="description">User access level</field>
         <field name="sequence">20</field>
    </record>

    <record id="customer_group" model="res.groups">
        <field name="name">Customer</field>
        <field name="category_id" ref="module_dairy_management"/>
    </record>

    <record id="incharge_id" model="res.groups">
        <field name="name">Incharge</field>
        <field name="category_id" ref="module_dairy_management"/>
        <field name="implied_ids" eval="[(4, ref('customer_group'))]"/>
    </record>
    
     <record id="owner_user_id" model="res.groups">
        <field name="name">Owner</field>
        <field name="category_id" ref="module_dairy_management"/>
        <field name="implied_ids" eval="[(4, ref('incharge_id'))]"/>
    </record>


</odoo>
