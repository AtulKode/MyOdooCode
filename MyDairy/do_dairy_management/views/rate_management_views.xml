<?xml version="1.0" encoding="utf-8"?>

<!--do_dairy_management_rate_management_view.xml -->

<odoo>
    <data>
        <record id="view_rate_management_form" model="ir.ui.view">
            <field name="name">do_dairy_management.rate_management.form</field>
            <field name="model">rate.management</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                        <group>
                            <group>
                                <field name="dairy_id"/>
                                <field name="from_date"/>
                                <field name="to_date"/>
                            </group>
                            <group>
                                <field name="active" invisible="1"/>
                                <field name="animal_id"/>
                                <field name="rate_per_fat"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_rate_management_tree" model="ir.ui.view">
            <field name="name">do_dairy_management.rate_management.tree</field>
            <field name="model">rate.management</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="dairy_id"/>
                    <field name="from_date"/>
                    <field name="to_date"/>
                    <field name="animal_id"/>
                    <field name="rate_per_fat"/>
                </tree>

            </field>
        </record>

        <record id="action_rate_management" model="ir.actions.act_window">
           <field name="name">Rate</field>
           <field name="type">ir.actions.act_window</field>
           <field name="res_model">rate.management</field>
           <field name="view_mode">tree,form</field>
        </record>


    </data>
</odoo>
