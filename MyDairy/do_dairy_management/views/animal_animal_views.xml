<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!--do_dairy_management_animal_view.xml -->
    <data>
        <record id="view_animal_form" model="ir.ui.view">
            <field name="name">do_dairy_management.animal.form</field>
            <field name="model">animal.animal</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_animal_tree" model="ir.ui.view">
            <field name="name">do_dairy_management.animal.tree</field>
            <field name="model">animal.animal</field>
            <field name="priority">20</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>

            </field>
        </record>

    <record id="action_animal" model="ir.actions.act_window">
       <field name="name">Animal</field>
       <field name="type">ir.actions.act_window</field>
       <field name="res_model">animal.animal</field>
       <field name="view_mode">tree,form</field>
    </record>

    </data>

</odoo>