<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <template id="report_purchaseorder_document">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="o.with_context(lang=o.partner_id.lang)"/>
            <div class="page">  
                <div style="text-align: right; color: #366092;">
                    <h2 t-if="o.state in ['draft', 'sent', 'to approve']"
                        style="text-decoration: underline; margin-top: -60px;">
                        <strong>REQUEST FOR QUOTATION</strong>
                    </h2>
                    <h2 t-if="o.state in ['purchase', 'done']"
                        style="text-decoration: underline; margin-top: -60px;">
                        <strong>PURCHASE ORDER</strong>
                    </h2>
                    <h2 t-if="o.state == 'cancel'"
                        style="text-decoration: underline; margin-top: -60px;">
                        <strong>CANCELLED PURCHASE ORDER</strong>
                    </h2>
                </div>
                                
                <div class="oe_structure"/>

                <div id="informations" class="row mt-4 mb32">
                    <div class="col-2 bm-2">
                        <strong style='color:#366092;'>REQUESTIONER</strong>
                        <p t-if="o.requestioner" t-field="o.requestioner" class="m-0"/>
                    </div>

                    <div class="col-2 bm-2">
                        <strong style='color:#366092;'>Ship Via</strong>
                        <p t-if="o.ship_via" t-field="o.ship_via" class="m-0"/>
                    </div>

                    <div class="col-2 bm-2">
                        <strong style='color:#366092;'>Shipping Terms</strong>
                        <p t-if="o.incoterm_id" t-field="o.incoterm_id" class="m-0"/>
                    </div>

                    <div class="col-2 bm-2">
                        <strong style='color:#366092;'>Deliver By</strong>
                        <p t-if="o.date_planned" t-field="o.date_planned" class="m-0" t-options="{'widget': 'date'}"/>
                    </div>

                    <div class="col-4 bm-2">
                        <strong style='color:#366092;'>PO Number</strong>:
                        <span t-field="o.name" class="m-0"/>
                        <br/>
                        <strong style='color:#366092;'>Date</strong>:
                        <span t-field="o.date_approve" class="m-0" t-options="{'widget': 'date'}"/>
                    </div>

                </div>

                <table class="table table-condensed" style="border:none !important; margin-top:25px;">
                    <tbody style="border: none !important;">
                        <tr style="border: none !important;">
                            <td class='text-left'
                                style="background:white !important;width:33.33%;border-left:none !important;border-top:none !important;border-bottom:none !important;border-right:2px solid #366092 !important;">
                            <div style="margin-top:-12px;">
                                <h4 style='color:#366092;'>Vendor</h4>
                                <span t-if="o.partner_id" t-field='o.partner_id' style="color:black;"/>
                                <span t-field="o.partner_id"
                                      t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;,&quot;phone&quot;, &quot;vat&quot;], &quot;no_marker&quot;: True, &quot;phone_icons&quot;: True}">
                                </span>
                                <span t-field='o.partner_id.email'/>
                            </div>

                            </td>
                            <td class='text-left'
                                style="background:white !important;width:33.33%;border-left:none !important;border-top:none !important;border-bottom:none !important;border-right:2px solid #366092 !important; color:#495057;">
                                <div style="margin-top:-12px;">
                                    <h4 style='color:#366092;'>Ship To</h4>
                                    <span t-field="o.ship_company.name" style='color:black;'/>
                                    <br/>
                                    <span t-field="o.ship_company.street"/>
                                    <br/>
                                    <span t-field="o.ship_company.street2"/>
                                    <br/>
                                    <t t-if="o.ship_company.state_id">
                                        <span t-field="o.ship_company.state_id.name"/>
                                        <br/>
                                    </t>
                                    <span t-field="o.ship_company.country_id.name"/>
                                    <br/>
                                    <span t-field="o.ship_company.phone"/>
                                    <br/>
                                    <span t-field="o.ship_company.email"/>
                                </div>
                            </td>
                            <td class='text-left'
                                style="background:white !important;width:33.34%;border-left:none !important;border-top:none !important;border-bottom:none !important;border-right:2px solid #366092 !important; color:#495057;">
                                <div style="margin-top:-12px;">
                                    <h4 style='color:#366092;'>Invoice To</h4>
                                    <!-- <span t-field="o.picking_type_id.company_id.name"/>
                                    <br/> -->
                                    <span t-field="env.company.name" style='color:black;'/>
                                    <br/>
                                    <span t-field="env.company.street"/>
                                    <br/>
                                    <span t-field="env.company.street2"/>
                                    <br/>
                                    <t t-if="env.company.state_id">
                                        <span t-field="env.company.state_id.name"/>
                                        <br/>
                                    </t>
                                    <t t-if="env.company.country_id">
                                        <span t-field="env.company.country_id.name"/>
                                        <br/>
                                    </t>
                                    <span t-field="env.company.phone"/>
                                    <br/>
                                    <span t-field="env.company.email"/>
                                </div>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <table class="table table-sm o_main_table table-borderless mt-8" style="margin-top:40px;">
                    <thead style="display: table-row-group; background-color: #366092; color: white;">
                        <tr>
                            <th style="color: white; font-weight: bold; padding: 8px;">Item</th>
                            <th name="th_description" style="color: white; font-weight: bold; padding: 8px;">
                                <strong>Description</strong>
                            </th>
                            <th name="th_quantity" style="color: white; font-weight: bold; padding: 8px;">
                                <strong>Qty</strong>
                            </th>
                            <th name="th_price_unit" style="color: white; font-weight: bold; padding: 8px;">
                                <strong>Unit Price</strong>
                            </th>
                            <th name="th_amount" style="color: white; font-weight: bold; padding: 8px;">
                                <strong>Amount</strong>
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        <t t-set="current_subtotal" t-value="0"/>
                        <t t-set="i_counter" t-value="1"/>
                        <t t-foreach="o.order_line" t-as="line">
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal"
                               groups="account.group_show_line_subtotals_tax_excluded"/>
                            <t t-set="current_subtotal" t-value="current_subtotal + line.price_total"
                               groups="account.group_show_line_subtotals_tax_included"/>

                            <tr t-att-class="'bg-200 fw-bold o_line_section' if line.display_type == 'line_section' else 'fst-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <td class="text-center" style="border-bottom: 1px solid; padding-top:10px;">
                                    <t t-esc="i_counter"/>
                                </td>
                                <t t-if="not line.display_type">
                                    <td id="product" style="border-bottom: 1px solid; padding-top:10px;">
                                        <span t-field="line.name"/>
                                    </td>
                                    <!--                                <t t-set="taxes" t-value="', '.join([(tax.description or tax.name) for tax in line.taxes_id])"/>-->
                                    <!--                                <td name="td_taxes" t-attf-class="text-end {{ 'text-nowrap' if len(taxes) &lt; 10 else '' }}">-->
                                    <!--                                    <span t-out="taxes">Tax 15%</span>-->
                                    <!--                                </td>-->
                                    <!--                                <td class="text-center">-->
                                    <!--                                    <span t-field="line.date_planned"/>-->
                                    <!--                                </td>-->
                                    <td style="border-bottom: 1px solid; text-align: right; padding-top:10px;">
                                        <span t-field="line.product_qty" t-options='{"widget": "float","precision": 0}'/>
                                        <span t-field="line.product_uom.name" groups="uom.group_uom"/>
                                    </td>
                                    <td style="border-bottom: 1px solid; text-align: right; padding: 8px;">
                                        <span t-field="line.price_unit" t-options='{"widget": "float","precision": 2}'/>
                                        <span t-field='o.currency_id.symbol'/>
                                    </td>
                                    <td style="border-bottom: 1px solid; text-align: right; padding: 8px;">
                                        <span t-field="line.price_subtotal"
                                              t-options='{"widget": "float","precision": 2}'/>
                                        <span t-field='o.currency_id.symbol'/>
                                    </td>

                                </t>
                                <t t-if="line.display_type == 'line_section'">
                                    <td colspan="99" id="section">
                                        <span t-field="line.name"/>
                                    </td>
                                    <t t-set="current_section" t-value="line"/>
                                    <t t-set="current_subtotal" t-value="0"/>
                                </t>
                                <t t-if="line.display_type == 'line_note'">
                                    <td colspan="99" id="note">
                                        <span t-field="line.name"/>
                                    </td>
                                </t>
                            </tr>
                            <t t-if="current_section and (line_last or o.order_line[line_index+1].display_type == 'line_section')">
                                <tr class="is-subtotal text-end">
                                    <td colspan="99" id="subtotal">
                                        <strong class="mr16">Subtotal</strong>
                                        <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                </tr>
                            </t>
                            <t t-set="i_counter" t-value="i_counter + 1"/>

                        </t>
                    </tbody>
                </table>

                <div id="total" class="row mb-4" style="background:white;">
                    <div class="col-12">
                        <table class='table table-sm table-bordered'>
                            <tr>
                                <th class="text-left" rowspan="3" style="text-align:left !important;width:70% !important;">
                                    <strong style="color: black; font-weight: bold;">Amount in words:</strong>
                                    <br/>
                                    <strong t-att-class="oe_subtotal_footer_separator"
                                          t-esc="o.currency_id.amount_to_text(o.amount_total)" style="color: black; font-weight: bold;"/>
                                    <br/>
                                    <!-- <t t-set="inword_ar" t-value="o.currency_id.with_context(lang='ar_001').amount_to_text(o.amount_total)"/>
                                      <t t-set="inword_ar" t-value="inword_ar.replace('Dollars','دولار')"/>
                                      <t t-set="inword_ar" t-value="inword_ar.replace('Cents','سنت')"/>
                                    <span t-att-class="oe_subtotal_footer_separator" t-esc="inword_ar" /> -->
                                </th>
                                <th style="color: black; font-weight: bold; padding-top:10px;">
                                    Gross Amount:
                                </th>
                                <td style="text-align: right; padding: 8px;">
                                    <t t-set="gross" t-value="o.amount_total+o.total_discount"/>
                                    <span t-field='o.currency_id.symbol'/>
                                    <span t-esc="gross" t-options='{"widget": "float","precision": 2}'/>
                                </td>
                            </tr>
                            <tr>
                                <th style="color: black; font-weight: bold;  padding-top:10px;">
                                    Discount:
                                </th>
                                <td style="text-align: right; padding: 8px;">
                                    <span t-field='o.currency_id.symbol'/>
                                    <span t-field="o.total_discount" t-options='{"widget": "float","precision": 2}'/>
                                </td>
                            </tr>
                            <tr>
                                <th><strong style="color: black; font-weight: bold;  padding-top:10px;">Net Amount:</strong></th>
                                <td style="text-align: right; padding: 8px; background-color:white;">
                                    <span t-field='o.currency_id.symbol' style="color: black; font-weight: bold;"/>
                                    <strong t-field="o.amount_total" t-options='{"widget": "float","precision": 2}' style="color: black; font-weight: bold;"/>
                                </td>
                            </tr>
                        </table>
                    </div>

                </div>
                <!-- <div> -->
                    <p t-field="o.terms_id.term_condition" class="mt-4"/>
                <!-- </div> -->
                <div class="last-page row mt-4" style="padding-left:650px; background:none;">
                    <div class="col text-center">
                        <h6 style="color:black; border-bottom:1px solid black; font-weight: bold;">Authorized Signatory</h6>
                        <span t-if="o.requestioner" t-field='o.requestioner'/>
                    </div>
                    
                </div>
                <div class="oe_structure"/>
            </div>
        </t>
    </template>


    <template id="report_purchaseorder">
        <t t-set="cids" t-value="request.httprequest.cookies.get('cids')"/>
        <t t-set="active_company_int_list" t-value="[]"/>
        <t t-if="cids">
            <t t-set="active_company_str_list" t-value="cids.split(',')"/>
            <t t-foreach="active_company_str_list" t-as="active_company_str">
                <t t-set="active_company_int_list" t-value="active_company_int_list + [int(active_company_str)]"/>
            </t>
        </t>
        <t t-if="len(active_company_int_list) > 0">
            <t t-set="company" t-value="request.env['res.company'].sudo().browse(active_company_int_list[0])"/>
        </t>
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="albanna_reports_customization.report_purchaseorder_document" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>