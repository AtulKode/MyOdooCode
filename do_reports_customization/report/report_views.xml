<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record id="paperformat_deliveryslip" model="report.paperformat">
        <field name="name">A4 DeliverySlip</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">50</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
    </record>

    <record id="paperformat_invoice" model="report.paperformat">
        <field name="name">A4 Invoice</field>
        <field name="default" eval="True" />
        <field name="format">A4</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">60</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">40</field>
        <field name="dpi">90</field>
    </record>
    <record id="albanna_delivery_slip_report" model="ir.actions.report">
        <field name="attachment" eval="False"/>
        <field name="attachment_use" eval="False"/>
        <field name="binding_model_id" ref="stock.model_stock_picking"/>
        <field name="binding_type">report</field>
        <field name="binding_view_types">list,form</field>
        <field name="groups_id" eval="[(6, 0, [])]"/>
        <field name="model">stock.picking</field>
        <field name="multi" eval="False"/>
        <field name="name">Delivery Slip Albanna(New)</field>
        <field name="paperformat_id" eval="paperformat_deliveryslip"/>
        <field name="report_name">albanna_reports_customization.deliveryslip_albanna_document</field>
        <field name="report_type">qweb-pdf</field>
    </record>


    <record id="albanna_invoice_report" model="ir.actions.report">
        <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
        <field name="attachment_use" eval="False"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="binding_view_types">list,form</field>
        <field name="groups_id" eval="[(6, 0, [ref('account.group_account_invoice'), ref('account.group_account_readonly')])]"/>
        <field name="model">account.move</field>
        <field name="multi" eval="False"/>
        <field name="name">Invoice Albanna(New)</field>
        <field name="paperformat_id" ref="paperformat_invoice"/>
        <field name="report_name">albanna_reports_customization.invoice_albanna_document</field>
        <field name="report_type">qweb-pdf</field>
    </record>

    <record id="action_report_purchase_order_albanna" model="ir.actions.report">
        <field name="name">Purchase Albanna</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">albanna_reports_customization.report_purchaseorder</field>
        <field name="report_file">albanna_reports_customization.report_purchaseorder</field>
        <field name="print_report_name">
            (object.state in ('draft', 'sent') and 'Request for Quotation - %s' % (object.name) or
            'Purchase Order - %s' % (object.name))</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="binding_type">report</field>
    </record>
</odoo>